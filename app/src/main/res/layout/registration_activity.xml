<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/header"/>
        </LinearLayout>



        <!-- Registration Form -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="110dp">

            <!-- Owner Name Label -->
            <EditText android:id="@+id/reg_ownername"
                android:hint="Owner Name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_marginBottom="20dp"/>

            <!-- Supermarket Name Label -->
            <EditText android:id="@+id/reg_supermarketname"
                android:hint="Supermarket Name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_marginBottom="20dp"/>

            <!--  Email Label -->
            <EditText android:id="@+id/reg_email"
                android:hint="Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_marginBottom="20dp"/>

            <!-- Phone Label -->
            <EditText android:id="@+id/reg_phone"
                android:hint="Phone Number"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_marginBottom="20dp"/>

            <!-- Area Label -->
            <Spinner
                android:id="@+id/reg_area"
                android:hint="Area Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:spinnerMode="dropdown"/>

            <!-- Address Label -->
            <EditText android:id="@+id/reg_address"
                android:hint="Full Address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:layout_marginBottom="20dp"/>

            <!-- Register Button -->
            <Button android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Register New Account"/>

            <!-- Link to Login Screen -->
            <TextView android:id="@+id/link_to_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                android:text="Already has account! Login here"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#025f7c"/>

        </LinearLayout>
        <!-- Registration Form Ends -->


    </RelativeLayout>
</ScrollView>

</android.support.constraint.ConstraintLayout>